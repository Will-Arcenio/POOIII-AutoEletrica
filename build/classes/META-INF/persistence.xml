<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="ProjectEletricaPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>model.Cliente</class>
    <class>model.Cidade</class>
    <class>model.Marca</class>
    <class>model.Modelo</class>
    <class>model.Veiculo</class>
    <class>model.Fornecedor</class>
    <class>model.Servico</class>
    <class>model.Funcao</class>
    <class>model.Funcionario</class>
    <class>model.Produto</class>
    <class>model.FormaPagamento</class>
    <class>model.ItemProduto</class>
    <class>model.ItemServico</class>
    <class>model.OrdemServico</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/autoeletrica_db"/>
      <property name="javax.persistence.jdbc.user" value="postgres"/>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.password" value="admin"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
